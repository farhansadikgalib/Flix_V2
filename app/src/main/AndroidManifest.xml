<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.virmana.flix">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR" />
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="com.virmana.flix.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.virmana.flix.ui.activities.StripeActivity"
            android:theme="@style/Theme.ProfileDialog">

        </activity>
        <activity android:name="com.virmana.flix.ui.activities.FinishActivity"
            android:theme="@style/Theme.ProfileDialog"/>
        <activity
            android:name="com.virmana.flix.ui.activities.PlansActivity"
            android:theme="@style/Theme.ProfileDialog" />
        <activity android:name="com.virmana.flix.ui.activities.CashActivity"
            android:theme="@style/Theme.ProfileDialog"/>
        <activity
            android:name="com.virmana.flix.ui.activities.PasswordActivity"
            android:theme="@style/Theme.ProfileDialog" />

        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <service
            android:name="com.virmana.flix.services.DownloadService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name="com.virmana.flix.services.ToastService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.virmana.flix.ui.activities.PlayerActivity"
            android:launchMode="singleTask"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme" />

        <meta-data
            android:name="com.google.android.gms.cast.framework.OPTIONS_PROVIDER_CLASS_NAME"
            android:value="${applicationId}.cast.CastOptionsProvider" />

        <service android:name="com.virmana.flix.services.NotifFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name="com.virmana.flix.cast.ExpandedControlsActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CastVideosDark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:launchMode="singleTask"
                android:value="com.virmana.flix.ui.activities.PlayerActivity" />
        </activity>
        <activity
            android:name="com.virmana.flix.ui.activities.IntroActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.virmana.flix.ui.activities.MovieActivity"
            android:theme="@style/AppThemeActionDestils" />
        <activity
            android:name="com.virmana.flix.ui.activities.HomeActivity"
            android:theme="@style/AppThemeActionDestils" />
        <activity
            android:name="com.virmana.flix.ui.activities.YoutubeActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.virmana.flix.ui.activities.ActorsActivity"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name="com.virmana.flix.ui.activities.ActorActivity"
            android:theme="@style/AppThemeActionDestils" />
        <activity
            android:name="com.virmana.flix.ui.activities.LoginActivity"
            android:theme="@style/AppThemeActionDestilsNew" />
        <activity
            android:name="com.virmana.flix.ui.activities.LoadActivity"
            android:theme="@style/AppThemeActionDestils">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:host="@string/panel_url" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.virmana.flix.ui.activities.GenreActivity"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name="com.virmana.flix.ui.activities.TopActivity"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name="com.virmana.flix.ui.activities.MyListActivity"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name="com.virmana.flix.ui.activities.SerieActivity"
            android:theme="@style/AppThemeActionDestils" />
        <activity
            android:name="com.virmana.flix.ui.activities.EditActivity"
            android:theme="@style/Theme.ProfileDialog" />
        <activity
            android:name="com.virmana.flix.ui.activities.ChannelActivity"
            android:theme="@style/AppThemeActionDestils" />
        <activity
            android:name="com.virmana.flix.ui.activities.CategoryActivity"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name="com.virmana.flix.ui.activities.SearchActivity"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name="com.virmana.flix.ui.activities.SplashActivity"
            android:theme="@style/AppThemeActionDestils">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.virmana.flix.ui.activities.SettingsActivity"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name="com.virmana.flix.ui.activities.SupportActivity"
            android:theme="@style/Theme.ProfileDialog" />
        <activity
            android:name="com.virmana.flix.ui.activities.PolicyActivity"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name="com.virmana.flix.ui.activities.EmbedActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme" />

        <activity android:name="com.virmana.flix.ui.activities.RefundActivity"
            android:theme="@style/AppThemeNoAction"
            />

    </application>

</manifest>